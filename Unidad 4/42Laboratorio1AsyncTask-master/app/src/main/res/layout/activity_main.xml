<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C6D2"
    tools:context="com.example.napstyle.a42laboratorio1_asynctask.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/txtIngresar"
        android:layout_width="164dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Contador"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnIngresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="17dp"
        android:layout_marginStart="38dp"
        android:background="#0000FF"
        android:text="Inicio"
        app:layout_constraintBottom_toTopOf="@+id/contador1"
        app:layout_constraintStart_toStartOf="@+id/txtIngresar"
        app:layout_constraintTop_toBottomOf="@+id/txtIngresar" />

    <TextView
        android:id="@+id/contador1"
        android:layout_width="81dp"
        android:layout_height="0dp"

        android:layout_marginBottom="88dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        android:text="Serie Fibonacci"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtIngresar"
        app:layout_constraintEnd_toEndOf="@+id/txtIngresar"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
